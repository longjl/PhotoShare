<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bucket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_record_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_group"
        android:layout_width="@dimen/gridview_item_dimension_user"
        android:layout_height="@dimen/gridview_item_dimension_user"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/nopicture_icon"
        android:layout_marginLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textColor="@color/divider_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textColor="@color/divider_color"
        android:textSize="16sp" />
</LinearLayout>